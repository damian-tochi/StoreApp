<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/android_avatar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/android_avatar"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".presenter.OnboardActivity"
            android:exported="false" />
        <activity
            android:name=".presenter.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".presenter.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presenter.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>

    </application>

</manifest>